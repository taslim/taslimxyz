{
  "name": "taslimxyz",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "eslint . && tsc --noEmit && tsx scripts/sync-blog-images.ts && next build",
    "check": "eslint . && tsc --noEmit && prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "dev": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "new": "tsx scripts/new-blog-draft.ts",
    "sync:blog-images": "tsx scripts/sync-blog-images.ts",
    "preview": "next build && next start",
    "publish:drafts": "tsx scripts/publish-blog-drafts.ts && tsx scripts/sync-blog-images.ts",
    "start": "next start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@next/third-parties": "^16.0.3",
    "@t3-oss/env-nextjs": "^0.13.8",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.0",
    "next": "^16.0.3",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-tweet": "^3.2.2",
    "rehype-pretty-code": "^0.14.1",
    "sanitize-html": "^2.17.0",
    "shiki": "^3.15.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/hast": "^3.0.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/sanitize-html": "^2.16.0",
    "enquirer": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "pnpm@10.13.1"
}
